CMS_PASSWORD=change-me
SESSION_SECRET=replace-with-long-random-string
SESSION_DURATION=24
NANOGPT_API_KEY=your-nanogpt-api-key-here

# User Tier Configuration (Optional - defaults to 'free')
# Options: 'free', 'pro', 'enterprise'
# Affects rate limiting tiers:
#   - free: Base limits (10 chat/min, 5 publish/min, 20 extract/min, 30 sites/min, 60 default/min)
#   - pro: 5x higher limits (50 chat/min, 25 publish/min, 100 extract/min, 150 sites/min, 300 default/min)
#   - enterprise: 20x higher limits (200 chat/min, 100 publish/min, 400 extract/min, 600 sites/min, 1200 default/min)
CMS_USER_TIER=free

# Rate Limiting (Optional - uses in-memory fallback if not configured)
# For production, sign up at https://upstash.com and create a Redis database
UPSTASH_REDIS_REST_URL=https://your-database.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-token-here

# Sentry Configuration (Optional - for error monitoring)
# Get your DSN from: https://sentry.io/settings/projects/
# Client-side (public)
NEXT_PUBLIC_SENTRY_DSN=https://your-public-key@o123456.ingest.sentry.io/123456
NEXT_PUBLIC_SENTRY_ENVIRONMENT=development
NEXT_PUBLIC_SENTRY_DEBUG=false

# Server-side (private)
SENTRY_DSN=https://your-public-key@o123456.ingest.sentry.io/123456
SENTRY_ENVIRONMENT=development
SENTRY_DEBUG=false

# Sentry build-time configuration (for source map uploads)
SENTRY_ORG=your-org-slug
SENTRY_PROJECT=cognicms
SENTRY_AUTH_TOKEN=your-auth-token-here
